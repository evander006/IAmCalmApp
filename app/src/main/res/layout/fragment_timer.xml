<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".fragments.TimerFragment">

    <!-- Header Text -->
    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="МНЕ СПОКОЙНО"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Timer Title -->
    <TextView
        android:id="@+id/timerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Таймер"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/headerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>


    <!-- Breathing Technique Indicator -->
    <TextView
        android:id="@+id/breathingTechnique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ДЫХАНИЕ ПО КВАДРАТУ"
        android:textColor="#666666"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/timerTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <ImageView
        android:layout_marginTop="45dp"
        android:id="@+id/playPause"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/paused"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breathingTechnique" />

    <!-- Visualization Square (for breathing exercise) -->

</androidx.constraintlayout.widget.ConstraintLayout>